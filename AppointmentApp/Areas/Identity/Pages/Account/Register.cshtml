@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="card bg-dark text-white mx-auto" style="max-width: 35rem;">
        <br />
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="d-flex justify-content-center">
            <div class="col-md-8">
                <hr />
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <p class="text-center">Create a new account.</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-2 form-floating">
                        <input asp-for="Input.FirstName" type="text" class="form-control bg-dark text-white" aria-required="true" placeholder="First Name" />
                        <label asp-for="Input.FirstName "><span class="bi bi-person-circle"> First Name</span></label>
                    </div>
                    <div class="mb-2 form-floating">
                        <input asp-for="Input.LastName" type="text" class="form-control bg-dark text-white" aria-required="true" placeholder="Last Name" />
                        <label asp-for="Input.LastName"><span class="bi bi-person-circle"> Last Name</span></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control mb-2 bg-dark text-white" autocomplete="username" aria-required="true" placeholder="Email" />
                        <label asp-for="Input.Email"><span class="bi bi-envelope-at"> Email</span></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control mb-2 bg-dark text-white" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password"><span class="bi bi-lock">Password</span></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-5">
                        <input asp-for="Input.ConfirmPassword" class="form-control mb-3 bg-dark text-white" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword"><span class="bi bi-lock">Confirm Password</span></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-4">Create account</button>
                </form>
                <p class="text-center">Have an account?<a class="nav-link text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></p>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}